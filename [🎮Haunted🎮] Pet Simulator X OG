-- Fun√ß√£o para abrir GUIs
local function openGui(guiName)
    local playerGui = game:GetService("Players").LocalPlayer:FindFirstChild("PlayerGui")
    if playerGui and playerGui:FindFirstChild(guiName) then
        playerGui[guiName].Enabled = not playerGui[guiName].Enabled
    end
end

-- Bot√µes para abrir os GUIs
MiscTab:AddButton({
    Name = "Dark Matter Machine",
    Callback = function()
        openGui("DarkMatter")
    end
})

