local function BuyTripleCoins()
    local args = {
        [1] = {
            [1] = {
                [1] = "Triple Coins",
                [2] = "10000"
            },
            [2] = {
                [1] = false,
                [2] = false
            }
        }
    }
    game:GetService("TextChatService").__REMOTES:FindFirstChild("boost working in the working twiks"):InvokeServer(unpack(args))
end



