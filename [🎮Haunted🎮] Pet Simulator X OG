-- Fun√ß√£o para ativar os boosts
local function activateBoost(boostName)
    local args = {
        [1] = {
            [1] = { [1] = boostName },
            [2] = { [1] = false }
        }
    }
    game:GetService("TextChatService").__REMOTES:FindFirstChild("activate boost"):FireServer(unpack(args))
end

-- Vari√°veis para os loops autom√°ticos
local autoTripleCoins = false
local autoTripleDamage = false
local autoSuperLucky = false
local autoUltraLucky = false

-- Fun√ß√µes de loop para os toggles
spawn(function()
    while task.wait(5) do
