-- Fun√ß√£o para abrir o ovo selecionado
local function openEgg()
    local args = {
        [1] = {
            [1] = {
                [1] = EggName,
                [2] = true,
                [3] = false
            },
            [2] = {
                [1] = false,
                [2] = false,
                [3] = false
            }
        }
    }
    game:GetService("TextChatService").__REMOTES:FindFirstChild("buyx egg"):InvokeServer(unpack(args))
end

-- Toggle para abrir ovos
local eggToggle = Window:MakeTab({Name = "Eggs", Icon = "rbxassetid://4483345998", PremiumOnly = false})
eggToggle:AddToggle({
    Name = "Open Eggs",
    Default = false,
    Callback = function(value)
        OpeningEggs = value
        if OpeningEggs then
            -- Inicia o loop de abertura de ovos
            eggLoop = task.spawn(function()
                while OpeningEggs do
                    openEgg()
                    task.wait(0.1) -- Intervalo entre cada abertura
                end
            end)
        else
            -- Para o loop de abertura de ovos
            if eggLoop then
                task.cancel(eggLoop)
            end
        end
    end
})

-- Dropdown para selecionar o nome do ovo
eggToggle:AddDropdown({
    Name = "EggName",
    Default = "Cracked Egg",
    Options = eggList,
    Callback = function(selected)
        EggName = selected
    end
})

