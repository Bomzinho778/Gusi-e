-- Fun√ß√£o para obter a lista de nomes dos jogadores
local function getPlayerNames()
    local playerNames = {}
    for _, player in pairs(game.Players:GetPlayers()) do
        table.insert(playerNames, player.Name)
    end
    return playerNames
end

-- Cria o Dropdown com a lista de jogadores
CreatorTab:AddDropdown("Lista de Jogadores", getPlayerNames(), function(selectedPlayer)
    print("Jogador selecionado:", selectedPlayer)
end)

-- Supondo que voc√™ j√° tenha a aba CreatorTab criada
local CreatorTab = Window:CreateTab("Creator")

-- Fun√ß√£o para obter a quantidade de amigos no servidor atual
local function getFriendsInServer()
    local player = game.Players.LocalPlayer
    local friendsInServer = 0

    for _, otherPlayer in pairs(game.Players:GetPlayers()) do
        if player:IsFriendsWith(otherPlayer.UserId) then
            friendsInServer = friendsInServer + 1
        end
    end

    return friendsInServer
end

-- Fun√ß√£o para obter a quantidade de amigos jogando o mesmo jogo (n√£o necessariamente no mesmo servidor)
local function getFriendsInGame()
    local player = game.Players.LocalPlayer
    local success, friends = pcall(function()
        return player:GetFriendsOnline()
    end)

    if success and friends then
        local friendsInGame = 0
        for _, friend in pairs(friends) do
            if friend.PlaceId == game.PlaceId then
                friendsInGame = friendsInGame + 1
            end
        end
        return friendsInGame
    end

    return 0
end

-- Adiciona uma Label para mostrar a quantidade de amigos no servidor
CreatorTab:AddLabel("Amigos no Servidor: " .. tostring(getFriendsInServer()))

-- Adiciona uma Label para mostrar a quantidade de amigos jogando o mesmo jogo
CreatorTab:AddLabel("Amigos Jogando Este Jogo: " .. tostring(getFriendsInGame()))

