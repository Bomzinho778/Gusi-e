local myWindow = CreateWindow({Name = "Test"})  -- Cria a janela
local tabPanel = myWindow:FindFirstChildOfClass("ScrollingFrame")  -- Encontra o painel de abas

-- Criação da primeira aba
local tab1 = CreateTab(myWindow, tabPanel, {
    Name = "Tab 1",
    Icon = "rbxassetid://76530199889334"
})

-- Criação de outros componentes na tab1
CreateToggle(tab1, {
    Name = "Toggle",
    Default = false,
    Callback = function(Value)
        print("Toggle Value:", Value)
    end
})

CreateButton(tab1, {
    Name = "Botão 1",
    Callback = function()
        print("Botão 1 foi clicado!")
    end
})

CreateLabel(tab1, {
    Text = "Label 1",
})

CreateWarnLabel(tab1, {
    Text = "Warning Label 1",
})

CreateInfoLabel(tab1, {
    Text = "Info Label 1",
})

CreateSlider(tab1, {
    Name = "Volume",
    Default = 70,
    Min = 0,
    Max = 100,
    Callback = function(value)
        print("Volume:", value)
    end
})

CreateTextBox(tab1, {
    Name = "Test",
    Callback = function(text, enterPressed)
        if enterPressed then
            print("Texto digitado1:", text)
        end
    end
})

CreateDropdown(tab1, {
    Name = "Dropdown",
    MultipleOptions = true,
    Default = {"Option 1", "Option 2"},
    Options = {"Option 1", "Option 2", "Option 3"},
    CallBack = function(Options)
        print("Selected = ", Options)
    end
})

-- Criação da segunda aba
local tab2 = CreateTab(myWindow, tabPanel, {
    Name = "Tab 2",
    Icon = "rbxassetid://92817821432465"
})

-- Criação de componentes na tab2
CreateToggle(tab2, {
    Name = "Toggle 1 tab 2",
    Default = false,
    Callback = function(Value)
        print("Tab 2 Toggle Value:", Value)
    end
})

CreateButton(tab2, {
    Name = "Botão 2",
    Callback = function()
        print("Botão 2 foi clicado!")
    end
})

CreateLabel(tab2, {
    Text = "Label 2",
})

CreateWarnLabel(tab2, {
    Text = "Warning Label 2",
})

CreateInfoLabel(tab2, {
    Text = "Info Label 2",
})

CreateTextBox(tab2, {
    Name = "Test2",
    Callback = function(text, enterPressed)
        if enterPressed then
            print("Texto digitado1:", text)
        end
    end
})

CreateDropdown(tab2, {
    Name = "Dropdown",
    MultipleOptions = false,
    Default = {"Option 1"},
    Options = {"Option 1", "Option 2", "Option 3"},
    CallBack = function(Options)
        print("Selected = ", Options)
    end
})

CreateSlider(tab2, {
    Name = "Volume",
    Default = 5024,
    Min = 553,
    Max = 10520,
    Callback = function(value)
        print("Volume:", value)
    end
})

-- Mostra a primeira aba por padrão
for _, tab in ipairs(myWindow:GetChildren()) do
    if tab:IsA("ScrollingFrame") and tab.Parent == myWindow then
        tab.Visible = false
    end
end
tab1.Visible = true
